<div class="d-flex justify-content-center">
    <div class="progress w-100 position-relative" style="height: @height">
        <div class="progress-bar bg-@colour" role="progressbar" style="width: @Math.Round(@currentValue / @maxValue * 100, 2)%"
                aria-valuenow="@Math.Round(@currentValue, 2)"
                aria-valuemin="0"
                aria-valuemax="@Math.Round(@maxValue, 2)">
            <strong class="justify-content-center d-flex position-absolute w-100 @fontSize"
                    style="color: white; mix-blend-mode: difference;">
                <span>@title:&nbsp;</span>
                <span>@Math.Round(@currentValue, 2)/@Math.Round(@maxValue, 2)</span>
            </strong>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string title { get; set; }

    [Parameter]
    public string colour { get; set; }

    [Parameter]
    public string height { get; set; }

    [Parameter]
    public string fontSize { get; set; }

    [Parameter]
    public double currentValue { get; set; }

    [Parameter]
    public double maxValue { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        StateHasChanged();
    }
}
