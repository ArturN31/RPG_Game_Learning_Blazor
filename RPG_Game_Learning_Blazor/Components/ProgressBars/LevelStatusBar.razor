<div>
    <small class="fs-6">
        LVL: @Level
    </small>

    <div class="progress w-100 position-relative" style="height: 20px">
        <div class="progress-bar bg-warning" role="progressbar" style="width: @Math.Round(@CurrentExperience / @MaxExperience * 100, 2)%"
             aria-valuenow="@Math.Round(@CurrentExperience, 2)"
             aria-valuemin="0"
             aria-valuemax="@Math.Round(@MaxExperience, 2)">
            <strong class="justify-content-center d-flex position-absolute w-100 fs-6"
                    style="color: white; mix-blend-mode: difference;">
                <strong>EXP:&nbsp;</strong>
                <strong>@Math.Round(@CurrentExperience, 2)/@Math.Round(@MaxExperience, 2)</strong>
            </strong>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public double Level { get; set; }

    [Parameter]
    public double CurrentExperience { get; set; }

    [Parameter]
    public double MaxExperience { get; set; }
}
