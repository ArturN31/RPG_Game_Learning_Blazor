<div class="d-grid d-lg-flex gap-3 mx-auto">
    <div class="rounded-3 text-center w-100 d-grid gap-2">
        <strong class="lead" style="font-weight: 600;">
            @Name
        </strong>

        <RPG_Game_Learning_Blazor.Components.ProgressBars.LevelStatusBar 
        Level="@Level"
        CurrentExperience="@CurrentExperience"
        MaxExperience="@MaxExperience" />

        <RPG_Game_Learning_Blazor.Components.ProgressBars.ProgressBar title="HP"
        colour="danger"
        height="30px"
        fontSize="fs-5"
        currentValue="@CurrentHealth"
        maxValue="@MaxHealth" />

        <RPG_Game_Learning_Blazor.Components.ProgressBars.ProgressBar title="MP"
        colour="primary"
        height="30px"
        fontSize="fs-5"
        currentValue="@CurrentMana"
        maxValue="@MaxMana" />
    </div>
</div>


@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int Level { get; set; }

    [Parameter]
    public double CurrentExperience { get; set; }

    [Parameter]
    public double MaxExperience { get; set; }

    [Parameter]
    public double CurrentHealth { get; set; }

    [Parameter]
    public double MaxHealth { get; set; }

    [Parameter]
    public double CurrentMana { get; set; }

    [Parameter]
    public double MaxMana { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        StateHasChanged();
    }
}
