@inject Services.CharacterService CharacterService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RPG Game</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="character">
                Character
            </NavLink>
        </div>

        @if (CharacterService.CharacterExists())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link px-3" href="locations">
                    Locations
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link px-3" href="rest">
                    Rest - campfire
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        StateHasChanged();
    }
}